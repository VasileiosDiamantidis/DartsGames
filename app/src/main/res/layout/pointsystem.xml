<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:rowCount="4"
        android:columnCount="17"
        android:background="#FF9800"
        android:textAlignment="center"
        android:layout_gravity="center">
    <Button
        android:id="@+id/soo0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="0"
        android:layout_row="0"
        android:layout_column="0"/>
    <Button
        android:id="@+id/soo1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:layout_row="0"
        android:layout_column="1"/>
    <Button
        android:id="@+id/soo2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="2"
        android:layout_row="0"
        android:layout_column="2"/>
    <Button
        android:id="@+id/soo3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="3"
        android:layout_row="0"
        android:layout_column="3"/>
    <Button
        android:id="@+id/soo4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="4"
        android:layout_row="0"
        android:layout_column="4"/>
    <Button
        android:id="@+id/soo5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="5"
        android:layout_row="0"
        android:layout_column="5"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:inputType=""
        android:text=""
        android:layout_rowSpan="2"
        android:layout_columnSpan="3"
        android:layout_row="0"
        android:layout_column="6"
        android:layout_gravity="center"
        android:background="#FFEBEE"
        android:paddingLeft="5dp"/>

    <Button
        android:id="@+id/x2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="x2"
        android:layout_row="2"
        android:background="#F44336"
        android:layout_column="7"/>
    <Button
        android:id="@+id/x3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="x3"
        android:background="#F44336"
        android:layout_row="2"
        android:layout_column="8"/>
    <Button
        android:id="@+id/soo6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="6"
        android:layout_row="1"
        android:layout_column="1"/>
    <Button
        android:id="@+id/soo7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="7"
        android:layout_row="1"
        android:layout_column="2"/>
    <Button
        android:id="@+id/soo8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="8"
        android:layout_row="1"
        android:layout_column="3"/>
    <Button
        android:id="@+id/soo9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="9"
        android:layout_row="1"
        android:layout_column="4"/>
    <Button
        android:id="@+id/soo10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="10"
        android:layout_row="1"
        android:layout_column="5"/>
    <Button
        android:id="@+id/soo11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="11"
        android:layout_row="2"
        android:layout_column="1"/>
    <Button
        android:id="@+id/soo12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="12"
        android:layout_row="2"
        android:layout_column="2"/>
    <Button
        android:id="@+id/soo13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="13"
        android:layout_row="2"
        android:layout_column="3"/>
    <Button
        android:id="@+id/soo14"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="14"
        android:layout_row="2"
        android:layout_column="4"/>
    <Button
        android:id="@+id/soo15"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="15"
        android:layout_row="2"
        android:layout_column="5"/>
    <Button
        android:id="@+id/soo16"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="16"
        android:layout_row="3"
        android:layout_column="1"/>
    <Button
        android:id="@+id/soo17"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="17"
        android:layout_row="3"
        android:layout_column="2"/>
    <Button
        android:id="@+id/soo18"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="18"
        android:layout_row="3"
        android:layout_column="3"/>
    <Button
        android:id="@+id/soo19"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="19"
        android:layout_row="3"
        android:layout_column="4"/>
    <Button
        android:id="@+id/soo20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="20"
        android:layout_row="3"
        android:layout_column="5"/>
    <Button
        android:id="@+id/clear"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="C"
        android:background="#FFF176"
        android:layout_row="3"
        android:layout_column="7"/>
    <Button
        android:id="@+id/ok"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="OK"
        android:layout_row="3"
        android:layout_column="8"
        android:background="#76FF03"/>


</GridLayout>
</PreferenceScreen>